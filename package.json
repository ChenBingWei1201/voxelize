{
  "name": "voxelize",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "docs",
    "protocol"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel \"dev:rs\" \"dev:ts\"",
    "dev:rs": "cross-env RUST_BACKTRACE=full cargo watch -w server -x \"build --release\"",
    "dev:ts": "cd client && yarn run dev",
    "demo": "npm-run-all --parallel \"demo:ts\" \"demo:rs\"",
    "demo:ts": "cd examples/client && yarn && yarn demo",
    "demo:rs": "cross-env RUST_BACKTRACE=full cargo watch -w examples/server -w server -x \"run --release --example demo\"",
    "lint": "eslint --fix --ext js,ts,tsx .",
    "proto:ts": "pbts -o client/protocol/index.d.ts client/protocol/index.js",
    "proto:js": "pbjs -t static-module -w commonjs -o client/protocol/index.js messages.proto",
    "proto": "yarn run proto:js && yarn run proto:ts",
    "docs": "yarn run docs:start",
    "docs:start": "cd docs && rimraf docs/docs/api && yarn && yarn run start",
    "docs:build": "cd docs && yarn && yarn run build",
    "docs:deploy": "cd docs && yarn && yarn run deploy"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@swc/core": "^1.2.163",
    "@types/domurl": "^0.0.7",
    "@types/events": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "cross-env": "^7.0.3",
    "docusaurus-plugin-typedoc": "^0.17.5",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "peer": "^0.6.1",
    "prettier": "^2.5.1",
    "protobufjs": "^6.11.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.0",
    "rollup-plugin-glslify": "^1.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-swc3": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.7.2"
  }
}
