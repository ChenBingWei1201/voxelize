{
  "name": "@voxelize/common",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "proto:ts": "pbts -o src/protocol/index.d.ts src/protocol/index.js",
    "proto:js": "pbjs -t static-module -w commonjs -o src/protocol/index.js src/protocol/messages.proto",
    "proto": "yarn run proto:js && yarn run proto:ts"
  },
  "devDependencies": {
    "protobufjs": "^6.11.2",
    "rimraf": "~3.0.2",
    "typescript": "~4.5.0"
  }
}
