{
  "name": "@voxelize/common",
  "version": "1.0.13",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile && yarn run types",
    "clean": "rimraf -rf ./dist",
    "compile": "rollup -c rollup.config.js",
    "posttypes": "rimraf dist/protocol/index.d.ts && cp src/protocol/index.d.ts dist/protocol/index.d.ts",
    "types": "tsc --emitDeclarationOnly --outDir ./dist -p tsconfig.build.json --declaration --allowJs",
    "prepublishOnly": "yarn run build",
    "proto:ts": "pbts -o src/protocol/index.d.ts src/protocol/index.js",
    "proto:js": "pbjs -t static-module -w commonjs -o src/protocol/index.js src/protocol/messages.proto",
    "proto": "yarn run proto:js && yarn run proto:ts"
  },
  "dependencies": {
    "protobufjs": "^6.11.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@swc/core": "^1.2.143",
    "rimraf": "~3.0.2",
    "rollup": "^2.67.3",
    "rollup-plugin-swc3": "^0.2.0",
    "typescript": "~4.5.0"
  }
}
